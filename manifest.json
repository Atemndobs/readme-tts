{
  "manifest_version": 3,
  "name": "ReadMe - Text to Speech",
  "version": "1.3.3",
  "description": "Convert text to speech with advanced audio management",
  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://voice.cloud.atemkeng.de/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["highlight.css", "mini-player.css"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon/icons8-voice-recognition-48.png",
      "96": "icon/icons8-voice-recognition-96.png",
      "128": "icon/icons8-voice-recognition-128.png"
    }
  },
  "icons": {
    "48": "icon/icons8-voice-recognition-48.png",
    "96": "icon/icons8-voice-recognition-96.png",
    "128": "icon/icons8-voice-recognition-128.png"
  },
  "web_accessible_resources": [{
    "resources": [
      "popup.html",
      "popup.js",
      "content.js",
      "background.js",
      "storage.js",
      "sync-worker.js",
      "utils/settings.js",
      "utils/validation.js",
      "utils/retry.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://voice.cloud.atemkeng.de/;"
  }
}
